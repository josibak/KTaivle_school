# 변수 선언
name = '홍길동'
age = 25
score1 = 153
score2 = 204
score3 = 259
score4 = 221
score5 = 267

# 합계
tot_score = score1 + score2 + score3 + score4 + score5

# 평균
avg_score = tot_score / 5

# 연령대
age_group = age // 10 * 10





# 확인

print(f"{name}, 나이 : {age}, 연령대 : {age_group}")
print(f"점수 : {score1}, {score2}, {score3}, {score4}, {score5}")
print(f"합계 : {tot_score} / 평균 : {avg_score}") 










